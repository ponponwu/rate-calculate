:sass
  .btn-fb-login
    border-color: #3B5998
    border-bottom-color: #263a63
    background-color: #3B5998
    &:hover, &:focus
      border-color: #4568b2
      border-bottom-color: #2d4575
      background-color: #4568b2
      color: #fff
      a
        color: #fff !important
        text-decoration: none
  .btn-google-login a
    .text-container
      color: black !important
    &:hover, &:focus
      color: black
      text-decoration: none
  .icon-btn .icon-google-image
    display: block
    width: 20px
    top: 22px !important
    left: 20px
    height: 22px

  .signup-or-separator
    background: none
    height: 45px
    position: relative
    text-align: center
    .signup-or-separator--text
      background-color: #fff
      display: inline-block
      padding: 8px
    hr
      margin: -24px auto 10px
      width: 100%

  .icon-btn
    position: relative
    padding-left: 51px
    .icon
      position: absolute
      font-size: 18px
      top: 20px
      left: 30px
