:sass
  .modal-setting
    height: 60px
    border-radius: 2px !important
    font-size: 16px
  .btn-block
    display: block
    white-space: normal
    text-decoration: none
    border-color: #c4c4c4
    background: white
    color: #484848

  .btn-login
    border-color: #ff5a5f
    border-bottom-color: #e00007
    background-color: #ff5a5f
    color: #fff
  //customize
  .form-group
    margin-bottom: 5px !important

  .remember_me
    float: left
    padding-top: 0
    padding-bottom: 0

  #login_lost_btn
    color: #e00007

  #login_register_btn, #register_login_btn
    background: #fff
    height: 40px
    border-color: #ff5a5f
    color: #ff5a5f

  .space-1
    margin: 6px 0




:javascript
  $('#login_lost_btn').insertAfter('label[for=user_remember_me]');
