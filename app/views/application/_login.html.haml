- if !current_user
  %li= link_to("註冊", new_user_registration_path, { "data-toggle": "modal", remote: true, "data-target": "#login-modal", method: 'get'})
  -# %li= link_to("登入", '#login-modal', 'data-toggle': 'modal')
  %li= link_to("登入", '#', {"data-toggle": "modal", "data-target": "#login-modal", remote: true, method: 'get'})
- else
  %li.dropdown
    = link_to '#', {class: 'dropdown-toggle', "data-toggle": "dropdown"} do
      = current_user.first_name
      = image_tag current_user.image
      %b.caret
    %ul.dropdown-menu
      %li= link_to('欲觀察之幣種', attentions_path)
      %li= link_to('登出', destroy_user_session_path, method: :delete)

= render 'application/modal/main'


:sass
  ul.nav.navbar-nav.navbar-right > .dropdown
    img
      border-radius: 15px
      width: 30px
